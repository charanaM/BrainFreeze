<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.brainfreeze.MainActivity"
    android:background="@mipmap/brainfreeze">

    <Button
        android:id="@+id/newgbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:background="@drawable/button_mainmenu"
        android:fontFamily="@font/akronim"
        android:text="New Game"
        android:textColor="@android:color/background_light"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgbtn"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/newgbtn"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/button_mainmenu"
        android:fontFamily="@font/akronim"
        android:text="Continue"
        android:textColor="@android:color/background_light"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/aboutbtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/aboutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/newgbtn"
        android:layout_marginEnd="88dp"
        android:background="@drawable/button_mainmenu"
        android:fontFamily="@font/akronim"
        android:text="About"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/exitbtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/exitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/aboutbtn"
        android:layout_alignBottom="@+id/aboutbtn"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/button_mainmenu"
        android:fontFamily="@font/akronim"
        android:text="Exit"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
